#!/bin/bash
set -eou pipefail

# Scenario: On main, tracking origin/main with no local commits
#
#   A (origin/main, HEAD)
#
# Clone and stay on main. No divergence.
# Expected: A

mkdir origin
pushd origin > /dev/null
git init > /dev/null
git commit --allow-empty -m "Initial commit" > /dev/null
popd > /dev/null

git clone origin repo > /dev/null 2>&1
pushd repo > /dev/null

git rev-parse HEAD
